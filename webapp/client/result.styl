.result
  max-width 720px
  margin 30px auto
  padding 30px 80px
  color #414042
  background #F1FBF9
  border-radius 12px
  border-bottom-left-radius 0px
  border-bottom-right-radius 0px

  h1
    color #414042

  .content
    margin-top 60px
    background #25bda8
    color white
    border-radius 12px
    padding 80px
    box-shadow 5px 5px 3px #888888

  .name
    font-size 64px
    
    hr
      border-top 4px double white
      text-align center

    hr:after
      content: '\002665'
      display: inline-block
      position: relative
      top: -65px
      padding: 0 10px
      background: #25bda8
      color: white
      font-size: 18px

  .gpa
    font-size 80px
  
  .feedback
    margin-top 80px
    margin-bottom 30px

    span
      font-size 28px

    a
      margin-left 10px
      background #F1FBF9
      color #25bda8
      font-size 24px
      border-radius 100px
      border-color #25bda8
      border-width 5px


  .base
    position absolute
    z-index -1
    height 16px
    margin 20px auto 0 auto
    left 0
    right 0
    max-width 800px
    background #20ab98
    border-radius 50px

  .selected
    background #25bda8
    color white
