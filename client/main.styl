.main
  max-width 1080px
  margin 30px auto

  .banner
    margin 30px
    padding 30px
    color #414042
    background #F1FBF9
    border-radius 12px
    border-bottom-left-radius 0px
    border-bottom-right-radius 0px

    h1
      font-size 50px
      padding 15px 0px
    
    p
      font-size 18px

    .qrcode
      margin 15px auto

  .base
    position absolute
    z-index -1
    height 16px
    margin 20px auto 0 auto
    left 30px
    right 30px
    background #20ab98
    border-radius 50px
  